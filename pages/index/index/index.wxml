<loading wx:if="{{showLoading}}">加载中</loading>
<view class='top'>
  <!-- 搜索 -->
  <view class="weui-search-bar">
    <view class="weui-search-bar__form">
      <view class="weui-search-bar__box">
        <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
        <input type="text" value="{{initKey}}" class="weui-search-bar__input" placeholder="搜索表情包" bindconfirm="search" confirm-type="search"></input>
      </view>
    </view>
  </view>
  <!-- 最新/最热 -->
  <view class="flex-row" style='justify-content: space-around; background: white;'>
    <view class="item {{currentType == 'newest' ? 'active':''}}" bindtap='changeType' data-type='newest'>最新</view>
    <view class="item {{currentType == 'hottest' ? 'active':''}}" bindtap='changeType' data-type='hottest'>最热</view>
  </view>
</view>
<!-- 表情列表 -->
<scroll-view scroll-y class='list-area flex-row items-center' style='height:{{height}}px;' enable-back-to-top bindscrolltolower="loadMore">
  <view>
    <block wx:for="{{faceList}}" wx:for-item="item" wx:key="key" wx:index="index">
      <face-item class="face-item" raw="{{item.raw_image}}" full="{{item.full_image}}" faceid="{{item.face_id}}" />
      <ad style="maring-left: 25rpx; margin-right: 25rpx; margin-bottom: 20rpx;" unit-id="adunit-c00ee437f3e39ec8" wx:if="{{(index + 1 ) % 60 == 0}}" />
    </block>
  </view>
</scroll-view>