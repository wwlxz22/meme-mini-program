<!-- 搜索 -->
<view class='top'>
  <view class="weui-search-bar">
    <view class="weui-search-bar__form">
      <view class="weui-search-bar__box">
        <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
        <input type="text" class="weui-search-bar__input" placeholder="搜索表情包"></input>
      </view>
    </view>
  </view>
  <scroll-view scroll-x class='lists_view'>
    <view class='lists'>
      <block wx:for='{{lists}}' wx:key="index">
        <view class="item {{item.id==cate_id?'active':''}}" bindtap='changeCate' data-id='{{item.id}}'>{{item.name}}</view>
      </block>
    </view>
  </scroll-view>
</view>
<!-- 列表 -->

<scroll-view scroll-y class='images_view' style='height:{{height}}px;' enable-back-to-top bindscrolltolower="getmore">
  <view>
    <block wx:for="{{images}}" wx:key="index">
      <image src='{{item.full_image}}' class='image' bindtap='jumpToShare' data-src='{{item.full_image}}' data-raw='{{item.raw_image}}'></image>
    </block>
  </view>
</scroll-view>