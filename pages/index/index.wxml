<view class='top'>
  <!-- 搜索 -->
  <view class="weui-search-bar">
    <view class="weui-search-bar__form">
      <view class="weui-search-bar__box">
        <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
        <input type="text" class="weui-search-bar__input" placeholder="搜索表情包" bindconfirm="search" confirm-type="search"></input>
      </view>
    </view>
  </view>
  <!-- 最新/最热 -->
  <view class="flex-row" style='justify-content: space-around'>
    <view class="item {{currentType == 'newest' ? 'active':''}}" bindtap='changeType' data-type='newest'>最新</view>
    <view class="item {{currentType == 'hot' ? 'active':''}}" bindtap='changeType' data-type='hot'>最热</view>
  </view>
</view>
<!-- 表情列表 -->
<scroll-view scroll-y class='images_view' style='height:{{height}}px;' enable-back-to-top bindscrolltolower="getmore">
  <view>
    <block wx:for="{{images}}" wx:key="index">
      <image src='{{item.full_image}}' class='image' bindtap='jumpToShare' data-src='{{item.full_image}}' data-raw='{{item.raw_image}}'></image>
    </block>
  </view>
</scroll-view>