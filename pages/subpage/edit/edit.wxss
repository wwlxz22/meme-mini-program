/* pages/edit/edit.wxss */
@import "../../../common/common.wxss";

page {
  background: #e2e2e2;
}

.menu-area {
  width: 750rpx;
  height: 275rpx;
  margin-top: 15rpx;
  background: white;
}

.option-area {
  width: 180rpx;
}

.option-title {
  width: 180rpx;
  flex: 1;
  font-size: 34rpx;
  border: solid 1rpx #f2f2f2;
}

.option-active {
  color: green;
}

.value-area {
  height: 275rpx;
  flex: 1;
  flex-wrap: wrap;
  overflow: scroll;
}

.edit {
  margin: 20rpx 25rpx;
}

.color-item {
  width: 60rpx;
  height: 60rpx;
  margin-left: 30rpx;
  margin-top: 18rpx;
  border-radius: 50rpx;
  border: solid black 1rpx;
}

.size-item {
  width: 100%;
  height: 80rpx;
  border-top: solid 1rpx #f2f2f2;
}

.typeset-item {
  width: 100%;
  height: 125rpx;
  border-top: solid 1rpx #f2f2f2;
}

.color {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 10px;
}

.text {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.very_small {
  font-size: 16px;
  background: #fff;
  height: 20px;
  width: 50px;
  text-align: center;
}

.small {
  font-size: 16px;
  background: #fff;
  height: 20px;
  text-align: center;
  width: 50px;
}

.normal {
  font-size: 16px;
  background: #fff;
  height: 20px;
  text-align: center;
  width: 50px;
}

.big {
  font-size: 16px;
  background: #fff;
  height: 20px;
  text-align: center;
  width: 50px;
}

.very_big {
  font-size: 16px;
  background: #fff;
  height: 20px;
  text-align: center;
  width: 50px;
}

.title {
  font-size: 14px;
  padding: 5px;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 75rpx;
  margin-top: 25rpx;
  border-radius: 20px;
  background-color: #2fcf19;
  height: 80rpx;
  width: 600rpx;
  align-self: center;
  font-size: 28rpx;
  color: #fff;
  margin-bottom: 30rpx;
}

.btn::after {
  border: none;
}
