<search-bar class="search-bar" maskTop="40" binddoSearch="search" />
<scroll-view style='width: 100%; height: 100%;'>
  <view class='tag-area flex-row items-center'>
    <block wx:for="{{tagList}}" wx:for-item="tag" wx:key="key">
      <view class="category flex-center">{{tag.name}}</view>
      <block wx:for="{{tag.tags}}" wx:for-item="item" wx:key="key">
        <category-item class="tag-item" cid="{{item.category_id}}" cover="{{item.tag_cover}}" title="{{item.tag_name}}" />
      </block>
    </block>
  </view>
</scroll-view>