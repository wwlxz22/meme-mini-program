<scroll-view style='width: 100%; height: 100%;'>
  <view class='category-area flex-row items-center'>
    <block wx:for="{{categoryList}}" wx:for-item="item" wx:key="key">
      <category-item class="category-item" cid="{{item.category_id}}" cover="{{item.cover}}" title="{{item.name}}">{{item.name}}</category-item>
    </block>
  </view>
</scroll-view>